<div class="container">
  <h1>Your new dose for <%= @cocktail.name %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="column">
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description, label: 'Quantity' %>
        <%= f.association :ingredient, class: "select2" %>

        <br>
        <br>
        <%= f.submit class: "blue-button" %>
      <% end %>
      </div>
   </div>
</div>